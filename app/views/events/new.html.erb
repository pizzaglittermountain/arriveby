    <label for="phone_number" class="col-sm-2 control-label">
      Phone number
    </label>
    <div class="col-sm-6">
      <input type="text" id="phone_number" name="phone_number" placeholder="(xxx) xxx-xxxx" class="form-control" value="<%= @event.phone_number %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Event" class="btn btn-primary">
    </div>
  </div>
</form>
